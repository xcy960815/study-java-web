{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["./types/**/*", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["vite/client", "element-plus/global"],
    // "lib": ["dom", "esnext"],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@apis/*": ["./src/apis/*"],
      "@apis": ["./src/apis"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@components/*": ["./src/components/*"],
      "@router": ["./src/router"],
      "@router/*": ["./src/router/*"],
      "@enums/*": ["./src/enums/*"],
      "@enums": ["./src/enums"],
      "@plugins/*": ["./src/plugins/*"],
      "@types/*": ["./types/*"],
      "@/types/*": ["./types/*"]
    }
  }
}
